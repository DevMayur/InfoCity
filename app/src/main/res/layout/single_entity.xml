<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:id="@+id/card_single_entity"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_margin="18.0dip"
        app:cardCornerRadius="24.0dip"
        app:cardElevation="12.0dip"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/iv_image_single_entity"
                android:layout_width="0.0dip"
                android:layout_height="150.0dip"
                android:scaleType="centerCrop"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/placeholder_blank" />

            <ImageButton
                android:id="@+id/ibt_call_single_entity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="32.0dip"
                android:layout_marginTop="24.0dip"
                android:background="@drawable/bt_call_img"
                app:layout_constraintEnd_toStartOf="@id/textView4"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/iv_image_single_entity" />

            <ImageButton
                android:id="@+id/ibt_text_single_entity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24.0dip"
                android:layout_marginEnd="32.0dip"
                android:background="@drawable/bt_text_img"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/textView4"
                app:layout_constraintTop_toBottomOf="@id/iv_image_single_entity" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/iv_image_single_entity" />

            <TextView
                android:id="@+id/et_title_single_entity"
                android:layout_width="0.0dip"
                android:layout_height="wrap_content"
                android:layout_marginStart="24.0dip"
                android:layout_marginTop="24.0dip"
                android:layout_marginEnd="24.0dip"
                android:text="Name"
                android:textSize="24.0sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/ibt_call_single_entity" />

            <TextView
                android:id="@+id/tv_info_single_entity"
                android:layout_width="0.0dip"
                android:layout_height="wrap_content"
                android:layout_marginStart="24.0dip"
                android:layout_marginTop="24.0dip"
                android:layout_marginEnd="24.0dip"
                android:text="Information"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/et_title_single_entity" />

            <TextView
                android:id="@+id/tv_gst_single_entity"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginTop="24dp"
                android:layout_marginEnd="24dp"
                android:text="GST number"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_info_single_entity" />

            <ImageView
                android:id="@+id/iv_approve_single_entity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="24dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@+id/ibt_call_single_entity"
                app:layout_constraintStart_toStartOf="@+id/ibt_call_single_entity"
                app:layout_constraintTop_toBottomOf="@+id/tv_gst_single_entity"
                app:srcCompat="@drawable/bt_approve_img" />

            <ImageView
                android:id="@+id/iv_reject_single_entity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="24dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@+id/ibt_text_single_entity"
                app:layout_constraintStart_toStartOf="@+id/ibt_text_single_entity"
                app:layout_constraintTop_toBottomOf="@+id/tv_gst_single_entity"
                app:srcCompat="@drawable/bt_reject_img" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>